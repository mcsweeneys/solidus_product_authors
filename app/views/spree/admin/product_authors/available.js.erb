<h4><%= I18n.t('spree.available_authors') %></h4>
<table class="index">
  <thead>
    <tr>
      <th><%= I18n.t('spree.name') %></th>
      <th><%= I18n.t('spree.action') %></th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr id="<%= dom_id(author, :sel) %>">
        <td><%= author.name %></td>
        <td class="actions">
          <%= link_to icon(:add) + ' ' + I18n.t('spree.select'),
                            select_admin_product_author_path(@product, author),
                           :remote => true, class: 'iconlink' %>
        </td>
      </tr>
    <% end %>
    <% if @authors.empty? %>
     <tr><td colspan="3"><%= I18n.t('spree.no_match_found') %>.</td></tr>
    <% end %>
  </tbody>
</table>
