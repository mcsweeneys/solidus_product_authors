<% admin_layout "full-width" %>

<% admin_breadcrumb(link_to plural_resource_name(Spree::Product), spree.admin_products_path) %>
<% admin_breadcrumb t('spree.new_author') %>

<% render 'spree/admin/shared/product_sub_menu' %>

<%= form_for [:admin, @author] do |f| %>
  <fieldset data-hook="new_author">
    <legend align="center"><%= t('spree.new_author') %></legend>

    <%= render partial: 'form', locals: { f: f } %>

    <%= render partial: 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
